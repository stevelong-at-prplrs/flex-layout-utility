{
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "align": false,
        "arrow-parens": false,
        "array-type": false,
        "member-access": false,
        "max-line-length": {
            "options": [
                {
                    "limit": 300
                }
            ]
        },
        "max-file-line-count": [
            true,
            500
        ],
        "object-literal-sort-keys": false,
        "trailing-comma":false,
        "no-console": false,
        "no-namespace": false,
        "no-duplicate-imports": false,
        "no-submodule-imports": false,
        "no-implicit-dependencies": false,
        "no-angle-bracket-type-assertions": false
    }
}